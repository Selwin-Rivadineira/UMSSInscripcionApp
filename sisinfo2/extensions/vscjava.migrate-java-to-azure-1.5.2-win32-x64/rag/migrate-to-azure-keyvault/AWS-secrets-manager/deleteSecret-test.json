{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "DeleteSecretRequest request = DeleteSecretRequest.builder().secretId(\"example\").build();",
      "DeleteSecretRequest request = DeleteSecretRequest.builder().forceDeleteWithoutRecovery(true).build();",
      "DeleteSecretRequest request = DeleteSecretRequest.builder().recoveryWindowInDays(30).build();"
    ],
    "shouldNotMatch": [
      "String unrelated = \"UnrelatedClass\";",
      "System.out.println(\"Unrelated code snippet\");"
    ]
  }
}
