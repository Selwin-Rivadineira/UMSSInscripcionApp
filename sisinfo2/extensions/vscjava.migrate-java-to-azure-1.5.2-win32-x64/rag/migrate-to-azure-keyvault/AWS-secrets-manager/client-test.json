{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "SecretsManagerClient client = SecretsManagerClient.builder().build();",
      "AWSSecretsManager manager = new AWSSecretsManager();",
      "SecretsManagerClientBuilder builder = SecretsManagerClient.builder();",
      "AWSSecretsManagerClientBuilder awsBuilder = AWSSecretsManagerClientBuilder.standard();"
    ],
    "shouldNotMatch": [
      "String unrelated = \"UnrelatedClass\";",
      "public class AnotherClass {}"
    ]
  }
}
