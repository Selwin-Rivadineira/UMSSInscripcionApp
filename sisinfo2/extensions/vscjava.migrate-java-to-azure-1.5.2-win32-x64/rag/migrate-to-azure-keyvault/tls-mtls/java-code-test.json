{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "KeyStore keyStore = KeyStore.getInstance(\"JKS\");",
      "Certificate certificate = keyStore.getCertificate(\"alias\");",
      "SSLContext sslContext = SSLContext.getInstance(\"TLS\");"
    ],
    "shouldNotMatch": [
      "String unrelated = \"UnrelatedClass\";",
      "int number = 42;"
    ]
  }
}
