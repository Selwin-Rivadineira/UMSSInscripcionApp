{
  "filePattern": {
    "shouldMatch": [
      "application.properties",
      "config.yaml",
      "nested/bootstrap.yml"
    ],
    "shouldNotMatch": [
      "application.txt",
      "nested/config.json"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "secret=tyhnhd",
      "key=gftyry",
      "token=hfhdfgj",
      "accessKey=666777",
      "credential=mySecretKey",
      "password=12345",
      "apiKey: \"abcdef\"",
      "connectionString = \"Server=myServerAddress;Database=myDataBase;User Id=myUsername;Password=myPassword;\""
    ],
    "shouldNotMatch": [
      "username=admin",
      "url=http://example.com"
    ]
  }
}
