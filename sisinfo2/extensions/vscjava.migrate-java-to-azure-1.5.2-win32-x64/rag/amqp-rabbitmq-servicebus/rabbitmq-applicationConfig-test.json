{
  "filePattern": {
    "shouldMatch": [
      "application.yml",
      "src/main/resources/application.properties",
      "config/application.yaml",
      "docker-compose.yml",
      "deployment/environment.yml",
      "nested/folder/settings.properties"
    ],
    "shouldNotMatch": [
      "application.xml",
      "config.json",
      "src/main/java/RabbitConfig.java",
      "settings.js",
      "README.md"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "spring.rabbitmq.host=localhost",
      "spring.rabbitmq.port=5672",
      "spring.RABBITMQ.username=guest",
      "RabbitMQ.virtual-host=/",
      "# Configure RabbitMQ connection",
      "rabbitmq:\n  host: localhost\n  port: 5672",
      "services:\n  rabbitmq:\n    image: rabbitmq:3.9-management"
    ],
    "shouldNotMatch": [
      "spring.datasource.url=jdbc:mysql://localhost:3306/db",
      "server.port=8080",
      "# Database settings",
      "azure.servicebus.connection-string=${SERVICE_BUS_CONNECTION_STRING}",
      "logging.level.root=INFO"
    ]
  }
}
