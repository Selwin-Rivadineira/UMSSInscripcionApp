{
  "filePattern": {
    "shouldMatch": [
      "RabbitConfig.java", 
      "src/main/java/com/example/messaging/MessageSender.java",
      "nested/folder/RabbitTemplateConfig.java",
      "com/myapp/amqp/AmqpService.java", 
      "Main.java"
    ],
    "shouldNotMatch": [
      "RabbitConfig.kt",
      "src/main/resources/application.properties",
      "config/rabbitmq.yml", 
      "RabbitTemplate.html",
      "README.md"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "import org.springframework.amqp.rabbit.core.RabbitTemplate;",
      "private RabbitTemplate rabbitTemplate;",
      "rabbitTemplate.convertAndSend(\"exchange\", \"routing.key\", message);",
      "@Autowired AmqpTemplate amqpTemplate;",
      "AmqpTemplate template = new RabbitTemplate(connectionFactory);",
      "public void send(String message) { rabbitTemplate.convertAndSend(\"queue\", message); }",
      "rabbitTemplate.setReturnsCallback(returnedMessage -> { log.info(\"Message returned\"); });"
    ],
    "shouldNotMatch": [
      "import com.azure.spring.messaging.servicebus.core.ServiceBusTemplate;",
      "private ServiceBusTemplate serviceBusTemplate;",
      "Message<String> message = MessageBuilder.withPayload(\"Hello\").build();",
      "serviceBusTemplate.send(\"topic\", message);",
      "import org.springframework.amqp.core.Binding;", 
      "import com.rabbitmq.client.Channel;",
      "String rabbitMQHost = \"localhost\";"
    ]
  }
}
