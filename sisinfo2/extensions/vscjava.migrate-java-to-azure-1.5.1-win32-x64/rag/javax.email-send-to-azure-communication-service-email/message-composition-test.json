{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "MimeMessage mimeMessage = new MimeMessage(session);",
      "SimpleMailMessage message = new SimpleMailMessage();",
      "HtmlEmail email = new HtmlEmail();",
      "EmailBuilder.ignoringDefaults().build();",
      "MimeBodyPart bodyPart = new MimeBodyPart();",
      "MimeMultipart multipart = new MimeMultipart();",
      "SimpleEmail email = new SimpleEmail();",
      "MultiPartEmail email = new MultiPartEmail();",
      "HtmlEmail email = new HtmlEmail();",
      "ImageHtmlEmail email = new ImageHtmlEmail();",
      "EmailBuilder builder = EmailBuilder.ignoringDefaults();"
    ],
    "shouldNotMatch": [
      "String unrelated = \"UnrelatedClass\";",
      "System.out.println(\"Not related to email\");"
    ]
  }
}
