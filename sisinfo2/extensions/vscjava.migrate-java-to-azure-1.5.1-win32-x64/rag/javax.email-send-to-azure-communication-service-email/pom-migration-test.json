{
  "filePattern": {
    "shouldMatch": [
      "pom.xml",
      "nested/pom.xml",
      "project/pom.xml",
      "nested/build.gradle",
      "nested/build.gradle.kts"
    ],
    "shouldNotMatch": [
      "nested/ExampleClass.java",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "<artifactId>javax.mail</artifactId>",
      "<groupId>javax.mail</groupId>",
      "<artifactId>spring-boot-starter-mail</artifactId>",
      "<artifactId>commons-email</artifactId>",
      "<artifactId>simple-java-mail</artifactId>",
      "<dependency>\n  <groupId>com.sun.mail</groupId>\n  <artifactId>javax.mail</artifactId>\n  <version>1.x.x</version>\n</dependency>",
      "implementation 'com.sun.mail:javax.mail:1.x.x'",
      "implementation(\"com.sun.mail:javax.mail:1.x.x\")"
    ],
    "shouldNotMatch": [
      "<artifactId>unrelated-library</artifactId>",
      "<groupId>com.example</groupId>",
      "String unrelated = \"UnrelatedClass\";",
      "org.apache.activemq.ActiveMQConnectionFactory factory = new ActiveMQConnectionFactory();"
    ]
  }
}
