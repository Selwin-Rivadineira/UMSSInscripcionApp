{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "Transport.send(message);",
      "JavaMailSender sender = new JavaMailSenderImpl();",
      "org.apache.commons.mail.Email email = new SimpleEmail();",
      "org.simplejavamail.api.mailer.Mailer mailer = MailerBuilder.buildMailer();"
    ],
    "shouldNotMatch": [
      "System.out.println(\"Unrelated code\");",
      "String unrelated = \"Not an email API\";"
    ]
  }
}
