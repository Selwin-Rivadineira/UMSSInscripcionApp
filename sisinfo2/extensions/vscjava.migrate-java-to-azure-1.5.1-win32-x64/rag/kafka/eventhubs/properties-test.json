{
  "filePattern": {
    "shouldMatch": [
      "application.properties",
      "src/main/resources/application.properties",
      "config/application.yml",
      "src/main/resources/application.yaml",
      "services/kafka-service/application.yml",
      "nested/config/kafka.properties"
    ],
    "shouldNotMatch": [
      "application.xml",
      "settings.json",
      "src/main/resources/application.conf",
      "config.txt",
      "kafka-config.java",
      "bootstrap-servers.md"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "spring.kafka.bootstrap-servers=localhost:9092",
      "spring.kafka.consumer.bootstrap-servers=192.168.1.100:9092",
      "bootstrap:\n  servers: localhost:9092",
      "bootstrap.servers=kafka1:9092,kafka2:9092",
      "spring.cloud.stream.kafka.binder.brokers=localhost:9092"
    ],
    "shouldNotMatch": [
      "spring.datasource.url=jdbc:mysql://localhost:3306/mydb",
      "server.port=8080",
      "rabbitmq.host=localhost",
      "service.name=kafka-consumer",
      "bootstrap.style=modern",
      "# This is a kafka config file but all entries are commented"
    ]
  }
}
