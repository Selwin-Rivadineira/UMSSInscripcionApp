{
  "filePattern": {
    "shouldMatch": [
      "example.sql",
      "scripts/migration.sql",
      "database/schema.sql"
    ],
    "shouldNotMatch": [
      "mysql-schema.text",
      "mysql/schema.txt",
      "backup.md"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "VARCHAR2",
      "CREATE TABLE employees",
      "SELECT SYSDATE FROM DUAL",
      "CONNECT BY PRIOR employee_id = manager_id",
      "ROWNUM <= 10",
      "CREATE SEQUENCE EMPLOYEES_SEQ",
      "CREATE DATABASE LINK remote_db"
    ],
    "shouldNotMatch": [
      "aaa=bbb",
      "mysql-specific-keyword",
      "non-oracle-specific-pattern"
    ]
  }
}
